{
  "name": "async-basics",
  "version": "1.0.0",
  "description": "How to deal with asynchronous JavaScript",
  "scripts": {
    "clean": "rimraf build",
    "build": "babel src --source-maps -d build",
    "prestart": "npm run build",
    "start": "DEBUG=callback,promise,async nodemon --watch build build/app.js",
    "watch": "run-p 'build -- --watch' start"
  },
